extends layout

block content

  h1 #{title}: #{category.name}

  if category_products.length

    p #[strong Delete the following Products before attempting to delete this Category.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Products
      dl
        each product in category_products
          dt
            a(href=product.url) #{product.name}
          dd #{product.description}

  else
    p Do you really want to delete this Category?

    form(method='POST')
      div.form-group
        input#categoryid.form-control(type='hidden', name='categoryid', value=category._id )

      button.btn.btn-primary(type='submit') Delete
